<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="1000dp"
                android:bottomRightRadius="1000dp"
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="2dp"
                />
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#a8e063"
                android:gradientRadius="100dp"
                android:startColor="#56ab2f"
                android:type="linear" />

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="1000dp"
                android:bottomRightRadius="1000dp"
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="2dp"
                />
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#56ab2f"
                android:gradientRadius="100dp"
                android:startColor="#a8e063"
                android:type="linear" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>