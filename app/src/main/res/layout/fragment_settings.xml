<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/snow"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight unit"
                android:textColor="@color/slate"
                android:fontFamily="@font/baijamjuree_semi_bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_weight="3"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LB"
                    android:fontFamily="@font/baijamjuree_semi_bold"
                    android:textSize="13sp"
                    android:textColor="@color/silver"
                    />
                <Switch
                    android:id="@+id/weightUnitSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/colorPrimary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KG"
                    android:fontFamily="@font/baijamjuree_semi_bold"
                    android:textSize="13sp"
                    android:textColor="@color/silver"
                    />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/snow"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance unit"
                android:fontFamily="@font/baijamjuree_semi_bold"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:layout_gravity="left"
                android:layout_weight="3"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MI"
                    android:fontFamily="@font/baijamjuree_semi_bold"
                    android:textSize="13sp"
                    android:textColor="@color/silver"
                    />
                <Switch
                    android:id="@+id/distanceUnitSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/colorPrimary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM"
                    android:fontFamily="@font/baijamjuree_semi_bold"
                    android:textSize="13sp"
                    android:textColor="@color/silver"
                    />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@color/snow"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable Notifications"
                android:textColor="@color/slate"
                android:fontFamily="@font/baijamjuree_semi_bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off"
                    android:fontFamily="@font/michroma_regular"
                    android:textColor="@color/silver"
                    android:textSize="13sp"
                    />

                <Switch
                    android:id="@+id/disableNotificationsSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="on"
                    android:fontFamily="@font/michroma_regular"
                    android:textColor="@color/silver"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:background="@drawable/red_linear_gradient"
                android:text="Logout"
                android:layout_weight="1"
                android:textColor="@color/snow"
                android:textSize="12sp"
                android:fontFamily="@font/michroma_regular"
                />
            <Button
                android:id="@+id/deleteAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:background="@color/steel"
                android:text="Delete Account"
                android:layout_weight="1"
                android:textColor="@color/snow"
                android:textSize="12sp"
                android:fontFamily="@font/michroma_regular"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/versionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/michroma_regular"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>