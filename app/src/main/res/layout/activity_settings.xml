<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable Notifications"
                android:textColor="@color/slate"
                android:textSize="16sp"
                android:layout_gravity="left"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off"
                    android:textColor="@color/silver"
                    android:textSize="13sp"
                    />

                <Switch
                    android:id="@+id/disableNotificationsSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="on"
                    android:textColor="@color/silver"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver" />


        <LinearLayout
            android:id="@+id/removeAdsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:gravity="center"
            >

            <FrameLayout
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Ads"
                    android:textColor="@color/slate"
                    android:textSize="16sp"
                    android:layout_gravity="left"
                />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/removeAdsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="remove ads"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right"
                    />
                <LinearLayout
                    android:id="@+id/loadingRemoveAdsLayout"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please wait while we apply your settings"
                        android:textColor="@color/extraDarkSmoke"
                        android:textSize="12sp"
                        />
                    <ProgressBar
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>


        <Button
            android:id="@+id/getCoinsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/green_linear_gradient"
            android:text="get coins"
            android:textColor="@color/snow"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>