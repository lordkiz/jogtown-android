<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGhostWhite"
        android:focusableInTouchMode="true"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:text="Create A Group"
            android:textColor="@color/lightGreen"
            />



        <FrameLayout
            android:id="@+id/create_group_choose_background_image_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/silver"
            android:padding="10dp"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/background_selected_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTint="@color/smoke"
                android:drawableTop="@drawable/ic_camera"
                android:background="@color/transparent"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/smoke"
                android:text="Choose a background image"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/create_group_choose_group_avatar_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/extraDarkSmoke"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/group_avatar_selected_image_view"
                android:layout_width="95dp"
                android:layout_height="95dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/snow"
                android:drawableTop="@drawable/ic_camera"
                android:background="@color/transparent"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/snow"
                android:text="Choose a group image"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@color/slate"
                android:textStyle="bold"
                android:text="Group Name"/>

            <EditText
                android:id="@+id/create_group_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:hint="Enter a name"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textColor="@color/slate"
                android:textStyle="bold"
                android:text="Group Tag Line"/>

            <EditText
                android:id="@+id/create_group_tagline"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:hint="E.g The Great Bush Hunters"
                android:textColorHint="@color/silver"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_group_radio_group"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:checkedButton="@+id/create_group_public_radio_button" >

                <RadioButton
                    android:id="@+id/create_group_public_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Public (any one can find and join your group)"
                    android:textColor="@color/silver"/>

                <RadioButton
                    android:id="@+id/create_group_private_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/silver"
                    android:textSize="14sp"
                    android:text="Private (only people with group invite code can find and join group)" />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/slate"
                android:text="Join Fee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the amount of coins joggers joining your groups have to pay"
                android:textSize="12sp"
                android:textColor="@color/silver"
                />

            <EditText
                android:id="@+id/create_group_required_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:inputType="number"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/save_group_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Group"
                android:padding="20dp"
                android:textColor="@color/smoke"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/green_linear_gradient"
                />
            <ProgressBar
                android:id="@+id/create_group_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>



    </LinearLayout>

</ScrollView>