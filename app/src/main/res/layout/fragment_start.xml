<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment
        android:id="@+id/emptyStatsFragment"
        android:name="com.jogtown.jogtown.subfragments.SingleRunStatsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/start_fragment_map_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emptyStatsFragment"
        >
    </FrameLayout>

    <Button
        android:id="@+id/startSingleRunButton"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/green_linear_gradient"
        android:text="Jog Alone"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".45" />

    <Button
        android:id="@+id/startGroupRunButton"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/green_linear_gradient"
        android:text="Jog With A Group"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".45" />

</androidx.constraintlayout.widget.ConstraintLayout>