<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GroupRunMembersFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_run_members_fragment_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:translationZ="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationZ="1dp"
        app:layout_constraintTop_toBottomOf="@id/group_run_members_fragment_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            android:layout_weight="1">

            <com.txusballesteros.widgets.FitChart
                android:id="@+id/group_run_members_fragment_jogger_count_chart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:strokeSize="5dp"
                android:background="@drawable/circle_purple_primary"
                app:valueStrokeColor="@color/lightGreen"
                app:backStrokeColor="@color/smoke"
                app:animationMode="overdraw"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/transparent"
                >

                <TextView
                    android:id="@+id/joggerActiveCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/extraLightGhostWhite"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="13sp"
                    android:textColor="@color/lightGreen"
                    android:gravity="center"
                    android:text="ACTIVE" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            android:layout_weight="1">

            <com.txusballesteros.widgets.FitChart
                android:id="@+id/group_run_members_fragment_total_members_chart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:strokeSize="5dp"
                android:background="@drawable/circle_purple_primary"
                app:valueStrokeColor="@color/lightGreen"
                app:backStrokeColor="@color/smoke"
                app:animationMode="overdraw"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/transparent"
                >

                <TextView
                    android:id="@+id/joggerTotalMembersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/extraLightGhostWhite"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="13sp"
                    android:textColor="@color/lightGreen"
                    android:gravity="center"
                    android:text="ALL" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            android:layout_weight="1">

            <com.txusballesteros.widgets.FitChart
                android:id="@+id/group_run_members_fragment_total_km_chart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:strokeSize="5dp"
                android:background="@drawable/circle_purple_primary"
                app:valueStrokeColor="@color/lightGreen"
                app:backStrokeColor="@color/smoke"
                app:animationMode="overdraw"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/transparent"
                >

                <TextView
                    android:id="@+id/joggerActiveTotalKmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/extraLightGhostWhite"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:textSize="13sp"
                    android:textColor="@color/lightGreen"
                    android:gravity="center"
                    android:text="TOTAL KM" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/group_run_members_fragment_messages_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/purple_vertical_linear_gradient" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_run_fragment_messages_recycler_view"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_height="160dp"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="40dp"
            android:background="@color/colorPrimary"
            android:layout_weight="6"
            />

        <com.stfalcon.chatkit.messages.MessageInput
            android:id="@+id/group_run_fragment_message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:inputHint="Type a message..."
            app:inputHintColor="@color/darkSmoke"
            app:inputTextColor="@color/darkSmoke"
            android:background="@color/colorPrimary"
            android:layout_weight="2"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>